<mah:MetroWindow x:Class="UdsClient.Views.UdsClientMainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
                 xmlns:local="clr-namespace:UdsClient.Views"
                 mc:Ignorable="d"
                 Title="UDS Client" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Border Grid.Row="4" Background="{DynamicResource MahApps.Brushes.Accent}">
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Version: " 
                   FontSize="16"
                   FontWeight="DemiBold" 
                   Foreground="White" 
                   VerticalAlignment="Center"
                   Margin="5,0,5,0"/>

                <TextBlock Text="{Binding Version}" 
                   FontSize="16"
                   FontWeight="DemiBold" 
                   Foreground="White" 
                   VerticalAlignment="Center"
                   Margin="5,0,0,0"/>

            </StackPanel>
        </Border>

    </Grid>
</mah:MetroWindow>
